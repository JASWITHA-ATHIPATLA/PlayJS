<body>
  <div class="container">
    <h2>üõçÔ∏è Simple Shopping Cart</h2>

    <select id="itemSelect">
      <option value="50">Apple - ‚Çπ50</option>
      <option value="40">Banana - ‚Çπ40</option>
      <option value="100">Mango - ‚Çπ100</option>
      <option value="80">Orange - ‚Çπ80</option>
      <option value="120">Grapes - ‚Çπ120</option>
    </select>

    <input type="number" id="quantity" placeholder="Enter quantity" min="1" />

    <button onclick="addToCart()">Add to Cart</button>

    <ul id="cartList"></ul>

    <div class="total">Total: ‚Çπ<span id="totalCost">0</span></div>
  </div>

  <script>
    let totalCost = 0;

    function addToCart() {
      let itemSelect = document.getElementById("itemSelect");
      let quantityInput = document.getElementById("quantity");
      let cartList = document.getElementById("cartList");
      let totalDisplay = document.getElementById("totalCost");

      let itemName = itemSelect.options[itemSelect.selectedIndex].text.split(" - ")[0];
      let price = parseFloat(itemSelect.value);
      let quantity = parseInt(quantityInput.value);

      if (isNaN(quantity) || quantity <= 0) {
        alert("Please enter a valid quantity!");
        return;
      }

      let itemTotal = price * quantity;
      totalCost += itemTotal;

      // Create list item
      let li = document.createElement("li");
      li.innerHTML = `
        ${itemName} (x${quantity}) - ‚Çπ${itemTotal}
        <button class="remove-btn" onclick="removeItem(this, ${itemTotal})">Remove</button>
      `;

      cartList.appendChild(li);
      totalDisplay.textContent = totalCost;

      // Reset quantity
      quantityInput.value = "";
    }

    function removeItem(button, amount) {
      button.parentElement.remove();
      totalCost -= amount;
      document.getElementById("totalCost").textContent = totalCost;
    }
  </script>
</body>
